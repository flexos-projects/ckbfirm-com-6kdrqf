---
let message = '';
if (Astro.request.method === "POST") {
    try {
        const data = await Astro.request.formData();
        // Here you would typically send an email or save to a database
        // For this example, we'll just log it to the server console
        console.log("Form submitted:", Object.fromEntries(data.entries()));
        message = "Thank you for your message! We will get back to you shortly.";
    } catch (error) {
        console.error(error);
        message = "Sorry, there was an error submitting your form. Please try again.";
    }
}
---
<section id="contact-form" class="bg-brand-light py-16 md:py-24">
    <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto bg-white p-8 md:p-12 rounded-lg shadow-lg">
            <h2 class="text-3xl md:text-4xl font-bold font-heading text-center mb-4">Request a Consultation</h2>
            <p class="text-center text-gray-600 mb-8">Take the first step towards resolving your legal matters. Fill out the form below, and our team will contact you to schedule a confidential consultation.</p>
            
            {message && (
                <div class={`text-center p-4 mb-6 rounded-md ${message.startsWith('Sorry') ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700'}`}>
                    {message}
                </div>
            )}

            <form method="POST">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                        <input type="text" id="name" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-brand-primary focus:border-brand-primary">
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                        <input type="email" id="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-brand-primary focus:border-brand-primary">
                    </div>
                    <div>
                        <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                        <input type="tel" id="phone" name="phone" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-brand-primary focus:border-brand-primary">
                    </div>
                    <div>
                        <label for="company" class="block text-sm font-medium text-gray-700 mb-1">Company (Optional)</label>
                        <input type="text" id="company" name="company" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-brand-primary focus:border-brand-primary">
                    </div>
                </div>
                <div class="mb-6">
                     <label for="message" class="block text-sm font-medium text-gray-700 mb-1">How can we help you?</label>
                     <textarea id="message" name="message" rows="5" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-brand-primary focus:border-brand-primary"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="bg-brand-primary text-white font-heading font-bold px-8 py-3 rounded-md hover:bg-opacity-90 transition-colors duration-200 text-lg">Submit Request</button>
                </div>
            </form>
        </div>
    </div>
</section>