---
interface Props {
    title: string;
    tagline: string;
    ctaText?: string;
    ctaLink?: string;
    imageUrl?: string;
    altText?: string;
}

const { title, tagline, ctaText, ctaLink, imageUrl = 'https://images.pexels.com/photos/2083840/pexels-photo-2083840.jpeg', altText = 'Chicago Skyline' } = Astro.props;
---
<section class="relative bg-brand-dark text-white py-20 md:py-32">
    <div class="absolute inset-0">
        <img src={imageUrl} alt={altText} class="w-full h-full object-cover opacity-30">
    </div>
    <div class="container mx-auto px-6 relative z-10 text-center">
        <h1 class="text-4xl md:text-6xl font-bold font-heading leading-tight mb-4">{title}</h1>
        <p class="text-lg md:text-xl max-w-3xl mx-auto text-brand-secondary">{tagline}</p>
        { ctaText && ctaLink && (
            <a href={ctaLink} class="mt-8 inline-block bg-brand-primary text-white font-heading font-bold px-8 py-3 rounded-md hover:bg-opacity-90 transition-colors duration-200 text-lg">
                {ctaText}
            </a>
        )}
    </div>
</section>