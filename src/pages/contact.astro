--- 
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/Hero.astro';
import CTA from '@/components/CTA.astro';
--- 

<Layout 
    title="Contact Our Chicago Commercial Law Firm"
    description="Contact the CKB Firm in Chicago for a consultation regarding your commercial litigation, creditors' rights, or real estate law needs."
    seoKeyword="contact Chicago law firm"
>
    <Hero 
        title="Get In Touch"
        tagline="We are ready to listen and provide the strategic legal counsel you need. Reach out today to schedule your consultation."
    />

    <section class="py-16 md:py-24 bg-white">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <div class="lg:col-span-1">
                    <h2 class="text-3xl font-bold font-heading mb-6">Contact Information</h2>
                    <div class="space-y-4 text-gray-700">
                        <div>
                            <h3 class="font-bold text-brand-primary">Address</h3>
                            <p>123 N Wacker Dr, Suite 2350<br>Chicago, IL 60606</p>
                        </div>
                        <div>
                            <h3 class="font-bold text-brand-primary">Phone</h3>
                            <p><a href="tel:312-782-9599" class="hover:text-brand-accent"> (312) 782-9599</a></p>
                        </div>
                        <div>
                            <h3 class="font-bold text-brand-primary">Email</h3>
                            <p><a href="mailto:info@ckbfirm.com" class="hover:text-brand-accent">info@ckbfirm.com</a></p>
                        </div>
                        <div>
                            <h3 class="font-bold text-brand-primary">Business Hours</h3>
                            <p>Monday - Friday: 9:00 AM - 5:00 PM</p>
                            <p>Saturday - Sunday: Closed</p>
                        </div>
                    </div>
                </div>
                <div class="lg:col-span-2">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2970.333333333333!2d-87.6385!3d41.885!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x880e2cb35b23b3c1%3A0x11a3a22e2a7a582!2s123%20N%20Wacker%20Dr%2C%20Chicago%2C%20IL%2060606!5e0!3m2!1sen!2sus!4v1620000000000!5m2!1sen!2sus"
                        width="100%" 
                        height="450" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade"
                        class="rounded-lg shadow-md">
                    </iframe>
                </div>
            </div>
        </div>
    </section>

    <CTA />

</Layout>